NAME = minishell

CC = gcc

#CCFLAGS = -Wall -Wextra -Werror

CCFLAGS1 = -L /Users/eunjilee/.brew/opt/readline/lib -lreadline

CCFLAGS2 = -I /Users/eunjilee/.brew/opt/readline/include

LIBFT_NAME = libft.a
LINFT_DIR = libft/

MINISHELL = main.c \
			builtins.c \
			utils.c \
			errors.c \

SRCS = $(addprefix srcs/, $(MINISHELL))
OBJS = $(SRCS:%.c=%.o)

LIBFT = $(addprefix $(LIBFT_SIR), $(LIBFT_NAME))

all: $(NAME)

.c.o :
		$(CC) $(CCFLAGS2) -c -o $(<:.c=.o) $<

$(LIBFT):
		make -C $(LIBFT_DIR)

$(NAME): $(OBJS) $(LIBFT)
		$(CC) $(CCFLAGS1) -o $(NAME) $(OBJS) $(LIBFT)

clean:
		rm -f $(OBJS)
		make -C $(LINFT_DIR) clean

fclean: clean
		rm -f $(NAME)
		make -C $(LIBFT_DIR) fclean

re: fclean all

.PHONY: all clean fclean re .c.o
